
{
  "nameEn": "Arabic Purchase Order",
  "nameAr": "أمر شراء",
  "descriptionEn": "Professional Arabic purchase order template",
  "descriptionAr": "قالب أمر شراء احترافي باللغة العربية",
  "category": "order",
  "language": "ar",
  "sections": [
    {
      "type": "header",
      "order": 0,
      "content": {
        "showLogo": true,
        "titleAr": "أمر شراء",
        "companyInfoAr": {
          "name": "شركة القاضي التجارية",
          "address": "الرياض، المملكة العربية السعودية",
          "phone": "هاتف: {{companyPhone}}",
          "email": "{{companyEmail}}"
        }
      }
    },
    {
      "type": "divider",
      "order": 1,
      "content": {}
    },
    {
      "type": "body",
      "order": 2,
      "content": {
        "textAr": "رقم أمر الشراء: {{orderNumber}}\nتاريخ الطلب: {{orderDate}}\nرقم عقد LTA: {{ltaReference}}\nحالة الطلب: {{orderStatus}}"
      }
    },
    {
      "type": "spacer",
      "order": 3,
      "content": {
        "height": 20
      }
    },
    {
      "type": "body",
      "order": 4,
      "content": {
        "textAr": "بيانات العميل:\nاسم العميل: {{clientNameAr}}\nالعنوان: {{clientAddressAr}}\nجهة الاتصال: {{contactPerson}}\nرقم الهاتف: {{contactPhone}}"
      }
    },
    {
      "type": "spacer",
      "order": 5,
      "content": {
        "height": 20
      }
    },
    {
      "type": "body",
      "order": 6,
      "content": {
        "textAr": "عنوان التسليم:\n{{deliveryAddressAr}}\nتاريخ التسليم المتوقع: {{expectedDeliveryDate}}"
      }
    },
    {
      "type": "spacer",
      "order": 7,
      "content": {
        "height": 25
      }
    },
    {
      "type": "table",
      "order": 8,
      "content": {
        "columnsAr": ["م", "رمز الصنف", "اسم المنتج", "المواصفات", "الكمية المطلوبة", "سعر الوحدة", "الإجمالي"],
        "rows": "{{items}}",
        "showBorders": true,
        "headerColor": "#1a365d",
        "alternateRows": true
      }
    },
    {
      "type": "spacer",
      "order": 9,
      "content": {
        "height": 20
      }
    },
    {
      "type": "body",
      "order": 10,
      "content": {
        "textAr": "إجمالي الطلب: {{totalAmount}} ريال سعودي\nشامل ضريبة القيمة المضافة (15%)"
      }
    },
    {
      "type": "spacer",
      "order": 11,
      "content": {
        "height": 30
      }
    },
    {
      "type": "terms",
      "order": 12,
      "content": {
        "titleAr": "تعليمات التسليم والاستلام",
        "itemsAr": [
          "يجب تسليم جميع المنتجات وفقاً للمواصفات المذكورة",
          "التسليم خلال {{deliveryDays}} يوم عمل من تاريخ تأكيد الطلب",
          "يجب أن تكون جميع المنتجات مطابقة للمعايير السعودية (سابر)",
          "يتم فحص المنتجات عند الاستلام",
          "يجب أن تكون العبوة سليمة وغير تالفة",
          "إرفاق الفاتورة ومذكرة التسليم مع الشحنة",
          "في حالة عدم المطابقة، يتم رفض الاستلام",
          "الدفع حسب شروط عقد LTA رقم: {{ltaReference}}"
        ]
      }
    },
    {
      "type": "spacer",
      "order": 13,
      "content": {
        "height": 30
      }
    },
    {
      "type": "signature",
      "order": 14,
      "content": {
        "signatories": [
          {
            "nameAr": "مسؤول المشتريات",
            "titleAr": "شركة القاضي التجارية",
            "showStamp": true
          }
        ]
      }
    },
    {
      "type": "footer",
      "order": 15,
      "content": {
        "textAr": "أمر الشراء ملزم بعد التوقيع والختم الرسمي",
        "pageNumbers": true,
        "pageNumberFormatAr": "صفحة {{page}} من {{total}}"
      }
    }
  ],
  "variables": [
    "companyPhone",
    "companyEmail",
    "orderNumber",
    "orderDate",
    "ltaReference",
    "orderStatus",
    "clientNameAr",
    "clientAddressAr",
    "contactPerson",
    "contactPhone",
    "deliveryAddressAr",
    "expectedDeliveryDate",
    "items",
    "totalAmount",
    "deliveryDays"
  ],
  "styles": {
    "primaryColor": "#1a365d",
    "secondaryColor": "#2d3748",
    "accentColor": "#d4af37",
    "fontSize": 10,
    "fontFamily": "Noto Sans Arabic",
    "headerHeight": 130,
    "footerHeight": 75,
    "margins": {
      "top": 150,
      "bottom": 95,
      "left": 50,
      "right": 50
    },
    "rtl": true,
    "alignment": "right"
  },
  "isActive": true,
  "version": 1,
  "tags": ["arabic", "purchase_order", "order", "professional"]
}
