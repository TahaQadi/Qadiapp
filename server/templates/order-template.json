{
  "nameEn": "Purchase Order Template",
  "nameAr": "قالب أمر الشراء",
  "descriptionEn": "Professional purchase order template",
  "descriptionAr": "قالب أمر شراء احترافي",
  "category": "order",
  "language": "both",
  "sections": [
    {
      "type": "header",
      "content": {
        "titleEn": "PURCHASE ORDER",
        "titleAr": "أمر شراء",
        "showLogo": true,
        "companyInfoEn": {
          "name": "Al Qadi Trading Company",
          "address": "Riyadh, Kingdom of Saudi Arabia",
          "phone": "+966 XX XXX XXXX",
          "email": "info@alqadi.com"
        },
        "companyInfoAr": {
          "name": "شركة القاضي التجارية",
          "address": "الرياض، المملكة العربية السعودية",
          "phone": "+966 XX XXX XXXX",
          "email": "info@alqadi.com"
        }
      }
    },
    {
      "type": "body",
      "content": {
        "textEn": "Order Number: {{orderNumber}}\nOrder Date: {{orderDate}}\nClient: {{clientName}}\nLTA Contract: {{ltaNumber}}\nDelivery Location: {{deliveryLocation}}",
        "textAr": "رقم الطلب: {{orderNumber}}\nتاريخ الطلب: {{orderDate}}\nالعميل: {{clientNameAr}}\nرقم العقد: {{ltaNumber}}\nموقع التسليم: {{deliveryLocationAr}}"
      }
    },
    {
      "type": "table",
      "content": {
        "columnsEn": ["Item No.", "SKU", "Product Name", "Quantity", "Unit Price", "Total"],
        "columnsAr": ["رقم الصنف", "رمز المنتج", "اسم المنتج", "الكمية", "سعر الوحدة", "الإجمالي"],
        "rows": "{{items}}"
      }
    },
    {
      "type": "body",
      "content": {
        "textEn": "Order Total: {{totalAmount}} SAR (Tax Included)\nStatus: {{status}}",
        "textAr": "إجمالي الطلب: {{totalAmount}} ريال (شامل الضريبة)\nالحالة: {{statusAr}}"
      }
    },
    {
      "type": "terms",
      "content": {
        "titleEn": "Delivery Instructions",
        "titleAr": "تعليمات التسليم",
        "itemsEn": [
          "Delivery as per LTA contract terms",
          "Quality inspection upon delivery",
          "Packaging must be intact",
          "Invoice and delivery note required"
        ],
        "itemsAr": [
          "التسليم حسب شروط عقد LTA",
          "فحص الجودة عند التسليم",
          "يجب أن تكون العبوة سليمة",
          "الفاتورة ومذكرة التسليم مطلوبة"
        ]
      }
    }
  ],
  "variables": [
    "orderNumber",
    "orderDate",
    "clientName",
    "clientNameAr",
    "ltaNumber",
    "deliveryLocation",
    "deliveryLocationAr",
    "items",
    "totalAmount",
    "status",
    "statusAr"
  ],
  "styles": {
    "primaryColor": "#1a365d",
    "secondaryColor": "#2d3748",
    "accentColor": "#d4af37",
    "fontSize": 10,
    "fontFamily": "Helvetica",
    "margins": {
      "top": 120,
      "bottom": 80,
      "left": 50,
      "right": 50
    }
  },
  "isActive": true
}
