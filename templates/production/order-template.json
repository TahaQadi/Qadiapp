{
  "nameEn": "Order Confirmation Template",
  "nameAr": "قالب تأكيد الطلب",
  "descriptionEn": "Order confirmation template with delivery details and department contacts",
  "descriptionAr": "قالب تأكيد الطلب مع تفاصيل التسليم وجهات الاتصال بالأقسام",
  "category": "order",
  "language": "both",
  "sections": [
    {
      "type": "header",
      "content": {
        "companyName": "{{companyName}}",
        "companyNameAr": "{{companyNameAr}}",
        "address": "{{companyAddress}}",
        "addressAr": "{{companyAddressAr}}",
        "phone": "{{companyPhone}}",
        "email": "{{companyEmail}}",
        "logo": true
      },
      "order": 0
    },
    {
      "type": "body",
      "content": {
        "title": "Order Confirmation",
        "titleAr": "تأكيد الطلب",
        "orderNumber": "{{orderNumber}}",
        "orderDate": "{{orderDate}}",
        "clientName": "{{clientName}}",
        "clientNameAr": "{{clientNameAr}}",
        "ltaReference": "{{ltaReference}}",
        "ltaReferenceAr": "{{ltaReferenceAr}}",
        "deliveryLocation": "{{deliveryLocation}}",
        "deliveryLocationAr": "{{deliveryLocationAr}}",
        "estimatedDelivery": "{{estimatedDelivery}}"
      },
      "order": 1
    },
    {
      "type": "body",
      "content": {
        "sectionTitle": "Department Contacts",
        "sectionTitleAr": "جهات الاتصال بالأقسام",
        "purchaseDept": "{{purchaseDeptContact}}",
        "financeDept": "{{financeDeptContact}}",
        "warehouseDept": "{{warehouseDeptContact}}"
      },
      "order": 2
    },
    {
      "type": "divider",
      "content": {},
      "order": 3
    },
    {
      "type": "table",
      "content": {
        "headers": ["#", "SKU", "Product Name", "Unit Type", "Quantity", "Unit Price", "Total"],
        "headersAr": ["#", "الرمز", "اسم المنتج", "نوع الوحدة", "الكمية", "سعر الوحدة", "المجموع"],
        "dataSource": "{{orderItems}}",
        "showBorders": true,
        "alternateRowColors": true
      },
      "order": 4
    },
    {
      "type": "spacer",
      "content": {
        "height": 20
      },
      "order": 5
    },
    {
      "type": "body",
      "content": {
        "subtotal": "{{subtotal}}",
        "total": "{{total}}",
        "currency": "{{currency}}",
        "paymentStatus": "{{paymentStatus}}"
      },
      "order": 6
    },
    {
      "type": "terms",
      "content": {
        "title": "Delivery Instructions",
        "titleAr": "تعليمات التسليم",
        "items": [
          "Expected delivery: {{estimatedDelivery}}",
          "Delivery location: {{deliveryLocation}}",
          "Contact person: {{deliveryContact}}",
          "Special instructions: {{specialInstructions}}"
        ],
        "itemsAr": [
          "التسليم المتوقع: {{estimatedDelivery}}",
          "موقع التسليم: {{deliveryLocationAr}}",
          "الشخص المسؤول: {{deliveryContactAr}}",
          "تعليمات خاصة: {{specialInstructionsAr}}"
        ]
      },
      "order": 7
    },
    {
      "type": "footer",
      "content": {
        "text": "Order Confirmation | تأكيد الطلب",
        "contact": "{{companyPhone}} | {{companyEmail}}",
        "pageNumbers": true
      },
      "order": 8
    }
  ],
  "variables": [
    "companyName",
    "companyNameAr",
    "companyAddress",
    "companyAddressAr",
    "companyPhone",
    "companyEmail",
    "orderNumber",
    "orderDate",
    "clientName",
    "clientNameAr",
    "ltaReference",
    "ltaReferenceAr",
    "deliveryLocation",
    "deliveryLocationAr",
    "estimatedDelivery",
    "purchaseDeptContact",
    "financeDeptContact",
    "warehouseDeptContact",
    "orderItems",
    "subtotal",
    "total",
    "currency",
    "paymentStatus",
    "deliveryContact",
    "deliveryContactAr",
    "specialInstructions",
    "specialInstructionsAr"
  ],
  "styles": {
    "primaryColor": "#0891b2",
    "secondaryColor": "#64748b",
    "accentColor": "#059669",
    "fontSize": 10,
    "fontFamily": "Helvetica",
    "headerHeight": 120,
    "footerHeight": 70,
    "margins": {
      "top": 140,
      "bottom": 90,
      "left": 50,
      "right": 50
    }
  },
  "isActive": true
}
