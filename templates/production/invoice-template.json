{
  "nameEn": "Invoice Template",
  "nameAr": "قالب الفاتورة",
  "descriptionEn": "Professional invoice template with payment terms and bank details",
  "descriptionAr": "قالب فاتورة احترافي مع شروط الدفع والتفاصيل المصرفية",
  "category": "invoice",
  "language": "both",
  "sections": [
    {
      "type": "header",
      "content": {
        "companyName": "{{companyName}}",
        "companyNameAr": "{{companyNameAr}}",
        "address": "{{companyAddress}}",
        "addressAr": "{{companyAddressAr}}",
        "phone": "{{companyPhone}}",
        "email": "{{companyEmail}}",
        "taxId": "{{companyTaxId}}",
        "logo": true
      },
      "order": 0
    },
    {
      "type": "body",
      "content": {
        "title": "INVOICE",
        "titleAr": "فاتورة",
        "invoiceNumber": "{{invoiceNumber}}",
        "invoiceDate": "{{invoiceDate}}",
        "dueDate": "{{dueDate}}",
        "billTo": "{{clientName}}",
        "billToAr": "{{clientNameAr}}",
        "clientAddress": "{{clientAddress}}",
        "clientAddressAr": "{{clientAddressAr}}",
        "clientTaxId": "{{clientTaxId}}",
        "orderReference": "{{orderReference}}"
      },
      "order": 1
    },
    {
      "type": "divider",
      "content": {},
      "order": 2
    },
    {
      "type": "table",
      "content": {
        "headers": ["#", "Description", "Quantity", "Unit Price", "Tax", "Amount"],
        "headersAr": ["#", "الوصف", "الكمية", "سعر الوحدة", "الضريبة", "المبلغ"],
        "dataSource": "{{invoiceItems}}",
        "showBorders": true,
        "alternateRowColors": true
      },
      "order": 3
    },
    {
      "type": "spacer",
      "content": {
        "height": 30
      },
      "order": 4
    },
    {
      "type": "body",
      "content": {
        "subtotal": "{{subtotal}}",
        "taxLabel": "VAT ({{taxRate}}%)",
        "taxLabelAr": "ضريبة القيمة المضافة ({{taxRate}}%)",
        "taxAmount": "{{taxAmount}}",
        "discount": "{{discount}}",
        "total": "{{total}}",
        "currency": "{{currency}}",
        "amountInWords": "{{amountInWords}}",
        "amountInWordsAr": "{{amountInWordsAr}}"
      },
      "order": 5
    },
    {
      "type": "divider",
      "content": {},
      "order": 6
    },
    {
      "type": "body",
      "content": {
        "bankTitle": "Payment Information",
        "bankTitleAr": "معلومات الدفع",
        "bankName": "{{bankName}}",
        "accountNumber": "{{accountNumber}}",
        "iban": "{{iban}}",
        "swiftCode": "{{swiftCode}}"
      },
      "order": 7
    },
    {
      "type": "terms",
      "content": {
        "title": "Payment Terms",
        "titleAr": "شروط الدفع",
        "items": [
          "Payment due within {{paymentDays}} days",
          "Late payment subject to {{lateFeePct}}% monthly fee",
          "Bank transfer to the account details above",
          "Please include invoice number in payment reference"
        ],
        "itemsAr": [
          "الدفع مستحق خلال {{paymentDays}} يوم",
          "الدفع المتأخر يخضع لرسوم شهرية {{lateFeePct}}%",
          "التحويل البنكي إلى التفاصيل المصرفية أعلاه",
          "يرجى تضمين رقم الفاتورة في مرجع الدفع"
        ]
      },
      "order": 8
    },
    {
      "type": "footer",
      "content": {
        "text": "Thank you for your business | شكراً لتعاملكم معنا",
        "contact": "{{companyPhone}} | {{companyEmail}}",
        "pageNumbers": true
      },
      "order": 9
    }
  ],
  "variables": [
    "companyName",
    "companyNameAr",
    "companyAddress",
    "companyAddressAr",
    "companyPhone",
    "companyEmail",
    "companyTaxId",
    "invoiceNumber",
    "invoiceDate",
    "dueDate",
    "clientName",
    "clientNameAr",
    "clientAddress",
    "clientAddressAr",
    "clientTaxId",
    "orderReference",
    "invoiceItems",
    "subtotal",
    "taxRate",
    "taxAmount",
    "discount",
    "total",
    "currency",
    "amountInWords",
    "amountInWordsAr",
    "bankName",
    "accountNumber",
    "iban",
    "swiftCode",
    "paymentDays",
    "lateFeePct"
  ],
  "styles": {
    "primaryColor": "#dc2626",
    "secondaryColor": "#64748b",
    "accentColor": "#16a34a",
    "fontSize": 10,
    "fontFamily": "Helvetica",
    "headerHeight": 130,
    "footerHeight": 70,
    "margins": {
      "top": 150,
      "bottom": 90,
      "left": 50,
      "right": 50
    }
  },
  "isActive": true
}
