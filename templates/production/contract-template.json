{
  "nameEn": "LTA Contract Template",
  "nameAr": "قالب عقد الاتفاقية طويلة الأجل",
  "descriptionEn": "Long-Term Agreement contract template with legal terms and product schedule",
  "descriptionAr": "قالب عقد الاتفاقية طويلة الأجل مع الشروط القانونية وجدول المنتجات",
  "category": "contract",
  "language": "both",
  "sections": [
    {
      "type": "header",
      "content": {
        "title": "LONG-TERM AGREEMENT CONTRACT",
        "titleAr": "عقد اتفاقية طويلة الأجل",
        "contractNumber": "{{contractNumber}}",
        "logo": true
      },
      "order": 0
    },
    {
      "type": "body",
      "content": {
        "sectionTitle": "PARTIES",
        "sectionTitleAr": "الأطراف",
        "party1Title": "SUPPLIER",
        "party1TitleAr": "المورد",
        "supplierName": "{{supplierName}}",
        "supplierNameAr": "{{supplierNameAr}}",
        "supplierAddress": "{{supplierAddress}}",
        "supplierAddressAr": "{{supplierAddressAr}}",
        "party2Title": "CLIENT",
        "party2TitleAr": "العميل",
        "clientName": "{{clientName}}",
        "clientNameAr": "{{clientNameAr}}",
        "clientAddress": "{{clientAddress}}",
        "clientAddressAr": "{{clientAddressAr}}"
      },
      "order": 1
    },
    {
      "type": "divider",
      "content": {},
      "order": 2
    },
    {
      "type": "body",
      "content": {
        "sectionTitle": "CONTRACT DETAILS",
        "sectionTitleAr": "تفاصيل العقد",
        "contractDate": "{{contractDate}}",
        "startDate": "{{startDate}}",
        "endDate": "{{endDate}}",
        "ltaName": "{{ltaName}}",
        "ltaNameAr": "{{ltaNameAr}}",
        "totalValue": "{{totalValue}}",
        "currency": "{{currency}}"
      },
      "order": 3
    },
    {
      "type": "divider",
      "content": {},
      "order": 4
    },
    {
      "type": "body",
      "content": {
        "sectionTitle": "PRODUCT SCHEDULE",
        "sectionTitleAr": "جدول المنتجات"
      },
      "order": 5
    },
    {
      "type": "table",
      "content": {
        "headers": ["#", "SKU", "Product Name", "Unit", "Contract Price", "Currency"],
        "headersAr": ["#", "الرمز", "اسم المنتج", "الوحدة", "سعر العقد", "العملة"],
        "dataSource": "{{contractProducts}}",
        "showBorders": true,
        "alternateRowColors": false
      },
      "order": 6
    },
    {
      "type": "spacer",
      "content": {
        "height": 30
      },
      "order": 7
    },
    {
      "type": "terms",
      "content": {
        "title": "TERMS AND CONDITIONS",
        "titleAr": "الشروط والأحكام",
        "items": [
          "1. SCOPE: This agreement covers the supply of products listed in the Product Schedule",
          "2. PRICING: Prices are fixed for the contract duration unless modified by mutual written consent",
          "3. DELIVERY: Supplier shall deliver products within {{deliveryDays}} business days of order confirmation",
          "4. PAYMENT: Payment terms are {{paymentTerms}} from invoice date",
          "5. QUALITY: All products shall meet agreed specifications and quality standards",
          "6. WARRANTY: Supplier warrants products for {{warrantyPeriod}} from delivery",
          "7. TERMINATION: Either party may terminate with {{noticePeriod}} days written notice",
          "8. FORCE MAJEURE: Neither party liable for delays due to circumstances beyond control",
          "9. CONFIDENTIALITY: Both parties agree to maintain confidentiality of business information",
          "10. GOVERNING LAW: This agreement is governed by {{governingLaw}}"
        ],
        "itemsAr": [
          "1. النطاق: تغطي هذه الاتفاقية توريد المنتجات المدرجة في جدول المنتجات",
          "2. التسعير: الأسعار ثابتة طوال مدة العقد ما لم يتم تعديلها بموافقة خطية متبادلة",
          "3. التسليم: يجب على المورد تسليم المنتجات خلال {{deliveryDays}} يوم عمل من تأكيد الطلب",
          "4. الدفع: شروط الدفع {{paymentTermsAr}} من تاريخ الفاتورة",
          "5. الجودة: يجب أن تلبي جميع المنتجات المواصفات ومعايير الجودة المتفق عليها",
          "6. الضمان: يضمن المورد المنتجات لمدة {{warrantyPeriodAr}} من التسليم",
          "7. الإنهاء: يمكن لأي طرف الإنهاء بإشعار خطي مدته {{noticePeriod}} يوم",
          "8. القوة القاهرة: لا يتحمل أي طرف مسؤولية التأخير بسبب ظروف خارجة عن الإرادة",
          "9. السرية: يوافق الطرفان على الحفاظ على سرية المعلومات التجارية",
          "10. القانون الحاكم: تخضع هذه الاتفاقية لـ {{governingLawAr}}"
        ]
      },
      "order": 8
    },
    {
      "type": "spacer",
      "content": {
        "height": 50
      },
      "order": 9
    },
    {
      "type": "signature",
      "content": {
        "party1Label": "SUPPLIER SIGNATURE",
        "party1LabelAr": "توقيع المورد",
        "party1Name": "{{supplierRepName}}",
        "party1Title": "{{supplierRepTitle}}",
        "party2Label": "CLIENT SIGNATURE",
        "party2LabelAr": "توقيع العميل",
        "party2Name": "{{clientRepName}}",
        "party2Title": "{{clientRepTitle}}",
        "witnessLabel": "WITNESS",
        "witnessLabelAr": "الشاهد"
      },
      "order": 10
    },
    {
      "type": "footer",
      "content": {
        "text": "LTA Contract | عقد الاتفاقية طويلة الأجل",
        "contact": "{{supplierPhone}} | {{supplierEmail}}",
        "pageNumbers": true
      },
      "order": 11
    }
  ],
  "variables": [
    "contractNumber",
    "supplierName",
    "supplierNameAr",
    "supplierAddress",
    "supplierAddressAr",
    "clientName",
    "clientNameAr",
    "clientAddress",
    "clientAddressAr",
    "contractDate",
    "startDate",
    "endDate",
    "ltaName",
    "ltaNameAr",
    "totalValue",
    "currency",
    "contractProducts",
    "deliveryDays",
    "paymentTerms",
    "paymentTermsAr",
    "warrantyPeriod",
    "warrantyPeriodAr",
    "noticePeriod",
    "governingLaw",
    "governingLawAr",
    "supplierRepName",
    "supplierRepTitle",
    "clientRepName",
    "clientRepTitle",
    "supplierPhone",
    "supplierEmail"
  ],
  "styles": {
    "primaryColor": "#1e293b",
    "secondaryColor": "#64748b",
    "accentColor": "#0891b2",
    "fontSize": 10,
    "fontFamily": "Helvetica",
    "headerHeight": 100,
    "footerHeight": 60,
    "margins": {
      "top": 120,
      "bottom": 80,
      "left": 60,
      "right": 60
    }
  },
  "isActive": true
}
