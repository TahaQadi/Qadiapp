{
  "id": "al-qadi-order-ar-v1",
  "name": "نموذج تأكيد طلب — شركة القاضي",
  "schemaVersion": "1.0",
  "category": "order_confirmation",
  "language": "ar",
  "rtl": true,
  "arabicIndicNumerals": true,
  "brand": {
    "palette": {
      "primary": "#D4AF37",
      "primaryDark": "#AA8F2C",
      "primaryLight": "#F7E07E",
      "secondary": "#111111",
      "secondaryLight": "#2B2B2B",
      "background": "#FFFFFF",
      "surface": "#FAFAFA",
      "muted": "#EDE9D5",
      "divider": "#E6E1CF",
      "success": "#1F7A1F",
      "danger": "#9D2A2A"
    },
    "typography": {
      "fontFamily": "Helvetica",
      "baseSizePt": 10,
      "scale": {
        "h1": 20,
        "h2": 14,
        "h3": 12,
        "body": 10,
        "small": 9
      }
    },
    "layout": {
      "pageSize": "A4",
      "marginsPt": {
        "top": 40,
        "right": 36,
        "bottom": 40,
        "left": 36
      },
      "logo": {
        "show": true,
        "maxWidthPt": 120,
        "position": "top-right"
      },
      "headerBar": {
        "show": true,
        "heightPt": 20,
        "color": "#111111"
      },
      "watermark": {
        "show": false,
        "text": ""
      }
    }
  },
  "placeholders": {
    "company": {
      "name": "{{company.name}}",
      "cr": "{{company.cr}}",
      "vat": "{{company.vat}}",
      "address": "{{company.address}}",
      "phone": "{{company.phone}}",
      "email": "{{company.email}}",
      "website": "{{company.website}}"
    },
    "client": {
      "name": "{{client.name}}",
      "contact": "{{client.contact}}",
      "phone": "{{client.phone}}",
      "email": "{{client.email}}",
      "address": "{{client.address}}"
    },
    "order": {
      "number": "{{order.number}}",
      "date": "{{order.date}}",
      "customerPO": "{{order.customerPO}}",
      "currency": "{{order.currency}}",
      "deliveryTerms": "{{order.deliveryTerms}}",
      "paymentTerms": "{{order.paymentTerms}}",
      "notes": "{{order.notes}}"
    },
    "totals": {
      "subtotal": "{{totals.subtotal}}",
      "discount": "{{totals.discount}}",
      "taxPercent": "{{totals.taxPercent}}",
      "taxAmount": "{{totals.taxAmount}}",
      "shipping": "{{totals.shipping}}",
      "grandTotal": "{{totals.grandTotal}}"
    }
  },
  "validation": {
    "required": [
      "company.name",
      "company.address",
      "company.phone",
      "client.name",
      "order.number",
      "order.date",
      "order.currency"
    ],
    "numberFields": [
      "totals.subtotal",
      "totals.discount",
      "totals.taxPercent",
      "totals.taxAmount",
      "totals.shipping",
      "totals.grandTotal"
    ]
  },
  "table": {
    "columns": [
      {
        "key": "sku",
        "label": "رمز الصنف",
        "widthPct": 12
      },
      {
        "key": "description",
        "label": "الوصف",
        "widthPct": 38
      },
      {
        "key": "uom",
        "label": "الوحدة",
        "widthPct": 8,
        "align": "center"
      },
      {
        "key": "qty",
        "label": "الكمية",
        "widthPct": 10,
        "align": "center"
      },
      {
        "key": "unitPrice",
        "label": "سعر الوحدة",
        "widthPct": 14,
        "align": "right"
      },
      {
        "key": "lineTotal",
        "label": "الإجمالي",
        "widthPct": 18,
        "align": "right"
      }
    ],
    "rowsVar": "{{items}}",
    "rowBindings": {
      "sku": "{{item.sku}}",
      "description": "{{item.description}}",
      "uom": "{{item.uom}}",
      "qty": "{{item.qty}}",
      "unitPrice": "{{item.unitPrice}}",
      "lineTotal": "{{item.lineTotal}}"
    },
    "style": {
      "headerFill": "#D4AF37",
      "headerText": "#111111",
      "rowStripe": true,
      "rowStripeFill": "#FAF6E8",
      "gridColor": "#E6E1CF",
      "textColor": "#111111"
    },
    "totals": [
      {
        "label": "الإجمالي قبل الضريبة",
        "value": "{{totals.subtotal}}"
      },
      {
        "label": "خصم",
        "value": "{{totals.discount}}"
      },
      {
        "label": "ضريبة القيمة المضافة {{totals.taxPercent}}٪",
        "value": "{{totals.taxAmount}}"
      },
      {
        "label": "الشحن / المناولة",
        "value": "{{totals.shipping}}"
      },
      {
        "label": "الإجمالي النهائي",
        "value": "{{totals.grandTotal}}",
        "emphasis": true
      }
    ]
  },
  "sections": [
    {
      "type": "header",
      "title": "تأكيد طلب",
      "subtitle": "{{company.name}} — إلى {{client.name}}"
    },
    {
      "type": "ribbon",
      "align": "left",
      "text": "وثيقة تجارية / تشغيلية",
      "color": "#111111",
      "textColor": "#F7E07E"
    },
    {
      "type": "keyvalue",
      "pairs": [
        {
          "label": "رقم الطلب",
          "value": "{{order.number}}"
        },
        {
          "label": "تاريخ الإصدار",
          "value": "{{order.date}}"
        },
        {
          "label": "أمر شراء العميل",
          "value": "{{order.customerPO}}"
        },
        {
          "label": "العملة",
          "value": "{{order.currency}}"
        }
      ]
    },
    {
      "type": "divider"
    },
    {
      "type": "group",
      "columns": [
        {
          "type": "panel",
          "title": "بيانات العميل",
          "icon": "user",
          "content": {
            "type": "paragraph",
            "text": "{{client.name}}\n{{client.contact}}\n{{client.phone}} • {{client.email}}\n{{client.address}}"
          }
        },
        {
          "type": "panel",
          "title": "بيانات الشركة",
          "icon": "building",
          "content": {
            "type": "paragraph",
            "text": "{{company.name}}\nس.ت: {{company.cr}} • ض.ق.م: {{company.vat}}\n{{company.phone}} • {{company.email}}\n{{company.address}}"
          }
        }
      ]
    },
    {
      "type": "spacer",
      "sizePt": 8
    },
    {
      "type": "table_ref",
      "ref": "table"
    },
    {
      "type": "spacer",
      "sizePt": 6
    },
    {
      "type": "paragraph",
      "text": "ملاحظات: {{order.notes}}"
    },
    {
      "type": "divider"
    },
    {
      "type": "group",
      "columns": [
        {
          "type": "panel",
          "title": "شروط الدفع",
          "content": {
            "type": "paragraph",
            "text": "{{order.paymentTerms}}"
          }
        },
        {
          "type": "panel",
          "title": "شروط التسليم",
          "content": {
            "type": "paragraph",
            "text": "{{order.deliveryTerms}}"
          }
        }
      ]
    },
    {
      "type": "spacer",
      "sizePt": 8
    },
    {
      "type": "legal",
      "title": "بنود قانونية مختصرة",
      "items": [
        "يُعد هذا التأكيد قبولًا للطلبات وفقًا لشروط شركة القاضي، ما لم يُنص على خلاف ذلك كتابيًا.",
        "جميع الأسعار غير شاملة الضرائب ما لم يُذكر غير ذلك صراحةً.",
        "ملكية البضائع تنتقل بعد السداد الكامل ما لم يُتفق على غير ذلك.",
        "أي نزاع يُحل وديًا أولًا، وفي حال التعذر يُحال للجهة القضائية المختصة."
      ]
    },
    {
      "type": "spacer",
      "sizePt": 10
    },
    {
      "type": "signatures",
      "blocks": [
        {
          "label": "ممثل شركة القاضي",
          "nameVar": "{{company.signer}}",
          "titleVar": "{{company.signerTitle}}",
          "stampBox": true
        },
        {
          "label": "ممثل العميل",
          "nameVar": "{{client.signer}}",
          "titleVar": "{{client.signerTitle}}",
          "stampBox": false
        }
      ]
    },
    {
      "type": "spacer",
      "sizePt": 6
    },
    {
      "type": "footer",
      "text": "{{company.name}} • {{company.phone}} • {{company.email}} • {{company.website}} • {{company.address}}"
    }
  ],
  "renderHints": {
    "avoidWidowsAndOrphans": true,
    "wrapLongLines": true,
    "numberFormat": {
      "thousandsSep": "٬",
      "decimalSep": "٫",
      "currencyFirst": false
    },
    "table": {
      "maxRowsPerPage": 28,
      "repeatHeaderEachPage": true
    }
  },
